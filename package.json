{
  "name": "squadhq-server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "watch": "nodemon ./bin/www",
    "test": "export NODE_ENV=test || SET \"NODE_ENV=test\" && mocha ./**/*.test.js",
    "test-watch": "nodemon --exec \"npm test\"",
    "apidoc": "apidoc",
    "docs": "apidoc -i src/ -o docs/",
    "postinstall": "npm run docs",
    "deploy": "git push heroku master"
  },
  "dependencies": {
    "apidoc": "0.17.5",
    "body-parser": "~1.17.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.3",
    "express": "~4.15.2",
    "morgan": "~1.8.1",
    "serve-favicon": "~2.4.2"
  },
  "devDependencies": {
    "expect": "1.20.2",
    "mocha": "3.3.0",
    "nodemon": "1.11.0",
    "supertest": "3.0.0"
  },
  "apidoc": {
    "name": "Squad HQ RESTful API",
    "title": "Squad HQ API Docs",
    "version": "0.0.0",
    "url": "https://api.squadhq.co.uk",
    "sampleUrl": "http://api.squadhq.co.uk"
  }
}
